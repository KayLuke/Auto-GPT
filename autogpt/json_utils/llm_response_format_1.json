{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "mind": {
            "type": "object",
            "properties": {
                "reflect": {
                    "type": "string",
                    "description": "thoughts and reasoning"
                },
                "plan": {
                    "type": "string",
                    "description": "- short bulleted\n- list that conveys\n- long-term plan"
                }
            },
            "additionalProperties": false
        },
        "cmd": {
            "type": "object",
            "properties": {
                "name": {"type": "string"},
                "args": {
                    "type": "object"
                }
            },
            "required": ["name", "args"],
            "additionalProperties": false
        }
    },
    "required": ["cmd"],
    "additionalProperties": false
}
